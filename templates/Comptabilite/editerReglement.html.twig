{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <h1 class="titresH1"> Modifier le réglement</h1>
    {{ form_start(form) }}
        <div class='container-fluid formulaire'  >
            <div class='row'>
                {# Colonne de gauche #}
                <div class='col-md-12 '>
                    <div class="form-group">
                       
                        {{ form_label(form.intitule,'Intitulé :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                        {{ form_errors(form.intitule) }}
                        {{ form_widget(form.intitule, { 'attr': {'class': 'form-control'} } )}}
                        
                        {{ form_label(form.montant,'Montant :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                        {{ form_errors(form.montant) }}
                        {{ form_widget(form.montant, { 'attr': {'class': 'form-control'} } )}}
                    
                        {{ form_label(form.date,'Date :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                        {{ form_errors(form.date) }}
                        {{ form_widget(form.date, { 'attr': {'class': 'form-control'} } )}}
                        {% if modeReglement == "Espèce" %}
                            {{ form_label(form.encaisse,'Espèces encaissés :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                            {{ form_errors(form.encaisse) }}
                            {{ form_widget(form.encaisse, { 'attr': {'class': 'form-control'} } )}}
                        {% endif%}
                        {% if modeReglement == "Chèque" %}
                            {{ form_label(form.nomBanque,'Nom de la banque :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                            {{ form_errors(form.nomBanque) }}
                            {{ form_widget(form.nomBanque, { 'attr': {'class': 'form-control'} } )}}

                            {{ form_label(form.numCheque,'Numéro de chèque :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                            {{ form_errors(form.numCheque) }}
                            {{ form_widget(form.numCheque, { 'attr': {'class': 'form-control'} } )}}

                            {{ form_label(form.encaisse,'Chèque encaissé :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                            {{ form_errors(form.encaisse) }}
                            {{ form_widget(form.encaisse, { 'attr': {'class': 'form-control'} } )}}
                        {% endif%}
                    </div>
                </div>
            </div>
        </div>
        <div class="MenuBasCentre"> 
            <a href="{{path('menu_reglements',{'page':1})}}"><button class="btn btn-primary">Retour </button></a>
            <button class="btn btn-primary" type="submit" id="visite_Enregistrer" name="visite[Enregistrer]">Enregistrer</button>
        </div>
        {{ form_row(form._token) }}
        {{ form_end(form, {'render_rest': false}) }} 
{%endblock%}
