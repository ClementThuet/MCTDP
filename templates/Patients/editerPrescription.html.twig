{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <h1 class="titresH1"> Modifier la prescription de {{prescription.visite.patient.nom}} {{prescription.visite.patient.prenom}} du {{prescription.visite.date|date('d-m-Y')}}</h1>
    {{ form_start(form) }}
        <div class='container-fluid formulaire'  >
            <div class='row'>
                {# Colonne de gauche #}
                <div class='col-md-12 '>
                    <div class="form-group">
                        {{ form_label(form.nom,'Nom :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                        {{ form_errors(form.nom) }}
                        {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} } )}}
                    
                        {{ form_label(form.date,'Date :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                        {{ form_errors(form.date) }}
                        {{ form_widget(form.date, { 'attr': {'class': 'form-control'} } )}}
                        
                        {{ form_label(form.observations,'Observations :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                        {{ form_errors(form.observations) }}
                        {{ form_widget(form.observations, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                </div>
            </div>
        </div>
        <div class="MenuBasCentre"> 
             <button class="btn btn-primary" value="Retour" onclick="document.location = '{{ path('historique_prescriptions') }}'">Retour </button>
            <button class="btn btn-primary" type="submit" id="visite_Enregistrer" name="visite[Enregistrer]">Enregistrer</button>
        </div>
        {{ form_row(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}                      
        
{%endblock%}
