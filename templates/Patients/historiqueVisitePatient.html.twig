{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <div class='container-fluid'>
        <div class='row'>
            <div class='col-md-12'>
                <h2>Historique des visites de {{ patient.nom}} {{ patient.prenom}}</h2>
               
                <table class="table table-striped table-light table-bordered table-hover tableCenter">
                        <thead class="thead-dark"> 
                            <tr>
                                <th>Id</th>
                                <th> Date de la visite</th>
                                <th>Motif de la visite</th>
                                <th>Observations</th>
                                <th>Modifier</th>
                                <th>Supprimer</th>
                            </tr>
                        </thead>
                        <tbody >
                            {% for visite in listVisites %}
                                <tr onclick="document.location = '{{ path('fiche_patient',{'id': patient.id}) }}';">
                                    <td> {{visite.id}} </td>
                                    <td>{{visite.date|date('Y-m-d')}} </td>
                                    <td>{{visite.motif}} </td>
                                    <td>{{visite.observations}}</td>
                                    <td><a href='{{ path('editer_visite',{'idVisite':visite.id}) }}'> <i class="fas fa-edit" id="glyphEdit"></i></a></td>
                                    <td><a href='{{ path('supprimer_visite',{'idVisite':visite.id}) }}'> <i class=" fas fa-trash-alt" id="glyphSuppr"</a> </td>
                                </tr>
                            </a>
                            {%endfor%}
                        </tbody>
                    </table>
                    <div id ='btRetour' >
                        <a href="{{ path('fiche_patient',{'id':patient.id})}}">
                            <input type="button"  class="btn btn-primary" value="Retour">
                        </a>
                    </div>
{%endblock%}