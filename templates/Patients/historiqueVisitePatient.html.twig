{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <div class='container-fluid'>
        <div class='row'>
            <div class='col-md-12'>
                <h1 class='titresH1'>Historique des visites de {{ patient.nom}} {{ patient.prenom}}</h1>
                {%if rechercheEffectuee is defined %}
                    <div class='center'>
                        <button class="btn btn-primary" onclick="document.location = '{{path('historique_visite_patient',{'idPatient':patient.id,'page':1})}}';">RÃ©initialiser recherche</button>
                    </div><br>
                {%endif%}
                <table class="table table-striped table-light  table-hover tableCenter">
                        <thead class="thead-dark"> 
                            <tr>
                                <th>Id<br>
                                <input type="text" class="recherche" id="searchId" placeholder="Chercher par identifiant">
                                <a href="" id="btSearchId"> <button class='btRecherche' >Rechercher</button></a></th>
                                <th>Date de la visite<br>
                                <input type="text" class="recherche" id="searchDate" placeholder="Chercher par date">
                                <a href="" id="btSearchDate"> <button class='btRecherche' >Rechercher</button></a></th>
                                <th>Motif de la visite<br>
                                <input type="text" class="recherche" id="searchMotif" placeholder="Chercher par motif">
                                <a href="" id="btSearchMotif"> <button class='btRecherche' >Rechercher</button></a></th>
                                <th>Observations<br>
                                <input type="text" class="recherche" id="searchObs" placeholder="Chercher par observation">
                                <a href="" id="btSearchObs"> <button class='btRecherche' >Rechercher</button></a></th>
                                <th>Modifier</th>
                                <th>Supprimer</th>
                            </tr>
                        </thead>
                        <tbody >
                            {% for visite in listVisites %}
                                <tr onclick="document.location = '{{ path('fiche_visite', { 'idVisite':visite.id }) }}'">
                                    <td> {{visite.id}} </td>
                                    <td>{{visite.date|date('d-m-Y')}} </td>
                                    <td>{{visite.motif}} </td>
                                    <td>{{visite.observations}}</td>
                                    <td><a href='{{ path('editer_visite',{'idVisite':visite.id}) }}'> <i class="fas fa-edit glyphMenu" ></i></a></td>
                                    <td><a href='{{ path('supprimer_visite',{'idVisite':visite.id}) }}'> <i class=" fas fa-trash-alt glyphMenu" </a> </td>
                                </tr>
                            </a>
                            {%endfor%}
                        </tbody>
                    </table>
                    <div class='MenuBasCentre' >
                        {%if retourPath is defined and retourPath== 'fiche_visite'%}
                            <a href="{{path('fiche_visite',{'idVisite':retourID})}}"> 
                            <input type='button' class="btn btn-primary" value='Retour'></a> 
                        {%else%}
                        <a href="{{ path('fiche_patient',{'id':patient.id})}}">
                            <input type="button"  class="btn btn-primary" value="Retour">
                        </a>
                        <div id='idPatient' style='display:none;'>{{patient.id}}</div>
                        {%endif%}
                    </div>
            </div>
        </div>
    </div>
{%endblock%}
