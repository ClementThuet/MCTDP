{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
      {{ form_start(form) }}
    <div class='container-fluid' id='headerVisitePatient'>
        <div class='row'>
            <div class='col-md-2'id="visitePatZoneNom" >
                <p>{{patient.nom }} {{patient.prenom}}</p> 
                <div class="form-group-date">
                        {{ form_label(form.date) }}
                        {{ form_errors(form.date) }}
                        {{ form_widget(form.date, { 'attr': {'class': 'form-control'} } )}}
                     <small> Date du jour si laissée vide </small>
                </div>
            </div>
            <div class='col-md-4' id="visitePatZoneObs" >
                <p> <b>Observations : </b><br> {{patient.observations}}</p>
            </div>
            <div class='col-md-4' id="visitePatZoneAllergies" >
                <p> <b> Allergies : </b><br> {{patient.allergies}}</p>
            </div>
             <div class='col-md-2' id="visitePatZoneAllergies" >
                 <p> <b> Médecin traitant : </b> {{patient.nom}}</p>
                 <p> <b> Tolère acupuncture : </b> {% if patient.accepteAcup == 1 %} Oui {%else%} Non{%endif%}</p>
            </div>
        </div>
    </div>
                
    <div class='container-fluid'>
        <div class='row'>
            <div class='col-md-12'>
                   
                    <div class="form-group">
                        {{ form_label(form.motif) }}
                        {{ form_errors(form.motif) }}
                        {{ form_widget(form.motif, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.observations) }}
                        {{ form_errors(form.observations) }}
                        {{ form_widget(form.observations, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    <div class="bt_enregistrer"> 
                        
                    </div>
            </div>
        </div>
    </div>
    <div id ='btRetour' >
            <a href="{{ path('fiche_patient',{'id': 1})}}"><input type="button"  class="btn btn-primary" value="Retour"> </a>
            <button class="btn btn-primary" type="submit" id="patient_Enregistrer" name="visite[Enregistrer]">Enregistrer</button>
    </div>
        {{ form_row(form._token) }}
        {{ form_end(form, {'render_rest': false}) }}   
    </div>
{%endblock%}