{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
      {{ form_start(form) }}
    <div class='container-fluid'>
        <div class='row'>
            <div class='col-md-12'>
                <h2> Nouvelle prescription</h2>
                 <div class='container-fluid formulaire'  >
            <div class='row'>
                {# Colonne de gauche #}
                <div class='col-sm-4 '>
                    <div class="form-group">
                        {{ form_label(form.nom) }}
                        {{ form_errors(form.nom) }}
                        {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.date) }}
                        {{ form_errors(form.date) }}
                        {{ form_widget(form.date, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.observations) }}
                        {{ form_errors(form.observations) }}
                        {{ form_widget(form.observations, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div id ='btRetour' >
        <div class="bt_enregistrer"> 
            <button class="btn btn-primary" type="submit"  name="prescription[Enregistrer]">Enregistrer</button>
        </div>
            <a href="{{path('fiche_visite',{'idVisite':idVisite})}}"><input type="button"  class="btn btn-primary" value="Retour"> </a>
    </div>
       {{ form_row(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}             
{%endblock%}