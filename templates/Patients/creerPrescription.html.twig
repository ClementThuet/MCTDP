{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
      {{ form_start(form) }}
    <div class='container-fluid'>
        <div class='row'>
            <div class='col-md-12'>
                <h1 class='titresH1'> Nouvelle prescription</h1>
                 <div class='container-fluid formulaire'  >
                    <div class='row'>
                        <div class='col-sm-4 '>
                            <div class="form-group">
                                {{ form_label(form.nom,'Nom :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                                {{ form_errors(form.nom) }}
                                {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} } )}}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.date,'Date :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                                {{ form_errors(form.date) }}
                                {{ form_widget(form.date, { 'attr': {'class': 'form-control'} } )}}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.observations,'Observations :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                                {{ form_errors(form.observations) }}
                                {{ form_widget(form.observations, { 'attr': {'class': 'form-control'} } )}}
                            </div>
                        </div>
                    </div>
                 </div>
            </div>
        </div>
    </div>
    
    <div class='MenuBasCentre' >
        <button class="btn btn-primary" type="submit"  name="prescription[Enregistrer]">Enregistrer</button>
        <a href="{{path('fiche_visite',{'idVisite':idVisite})}}"><input type="button"  class="btn btn-primary" value="Retour"> </a>
    </div>
    {{ form_row(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}             
{%endblock%}