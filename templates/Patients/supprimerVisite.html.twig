{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    
    <div class='container-fluid encartSuppr' >
        <div class='row'>
            <div class='col-md-8 offset-2'>
                <h1 class="titresH1">Supprimer une visite </h2>
                <p class="paragrapheExplicatif">
                    Êtes-vous certain de vouloir supprimer la visite du {{visite.date|date('d-m-Y')}} du patient "{{ patient.nom }} {{patient.prenom}}" ?
                </p>
                    
                <form action="{{ path('supprimer_visite', {'idVisite': visite.id}) }}" method="post">
                    <div class='MenuBasCentre'>
                        <a href="{{ path('historique_visite_patient', {'idPatient': patient.id}) }}" >
                           <input type='button' class="btn btn-primary" value='Retour au menu '></input> 
                        </a>
                        <input type="submit" value="Supprimer" class="btn btn-danger" />
                    </div>
                  {# Ceci va générer le champ CSRF #}
                  {{ form_rest(form) }}
                </form>
            </div>
        </div>
    </div>
{%endblock%}