{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <div class='container-fluid'>
        <div class='row'>
            <div class='col-md-12'>
                <h2>Documents de {{ patient.nom}} {{ patient.prenom}}</h2>
               
                <table class="table table-striped table-light table-bordered table-hover tableCenter">
                        <thead class="thead-dark"> 
                            <tr>
                                <th>Intitul√©</th>
                                <th>Date</th>
                                <th>Observations</th>
                                <th>Visualiser</th>
                                <th>Supprimer</th>
                            </tr>
                        </thead>
                        <tbody >
                            {% for document in listDocuments %}
                                <tr>
                                    <td>{{document.intitule}} </td>
                                    <td>{{document.date|date('d-m-Y')}} </td>
                                    <td>{{document.observations}}</td>
                                    <td><a href="../../uploads/documents/{{document.path}}" target="_BLANK"> Visualiser </a> </td>
                                    <td><a href='{{ path('supprimer_document',{'idDocument':document.id}) }}' > <i class=" fas fa-trash-alt" id="glyphSuppr"</a> </td>
                                </tr>
                            </a>
                            {%endfor%}
                            
                        </tbody>
                    </table>
                    <div id ='btRetour' >
                        <a href="{{ path('ajouter_document',{'idPatient':patient.id})}}">
                            <input type="button"  class="btn btn-primary" value="Ajouter un document">
                        </a>
                        <a href="{{ path('fiche_patient',{'id':patient.id})}}">
                            <input type="button"  class="btn btn-primary" value="Retour">
                        </a>
                    </div>
            </div>
        </div>
    </div>

{%endblock%}