{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <div class='container-fluid encartFicheVisite'>
        <div class='row'>
            <div class='col-md-12'>
                <h1 class="titresH1">Réglement par {{ modeDeReglement }} de la séance du {{visite.date|date('d-m-Y') }} de {{patient.nom}} {{patient.prenom}}</h1>
                    {{ form_start(form) }}
                    {%if modeDeReglement =="Chèque" %}
                    
                    <div class="form-group">
                        {{ form_label(form.intitule,'Intitulé :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                        {{ form_errors(form.intitule) }}
                        {{ form_widget(form.intitule, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.montant,'Montant :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                        {{ form_errors(form.montant) }}
                        {{ form_widget(form.montant, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.nomBanque,'Nom de la banque :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                        {{ form_errors(form.nomBanque) }}
                        {{ form_widget(form.nomBanque, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.numCheque,'N° de chèque :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                        {{ form_errors(form.numCheque) }}
                        {{ form_widget(form.numCheque, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.date,'Date :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                        {{ form_errors(form.date) }}
                        {{ form_widget(form.date, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    {%else%}
                     <div class="form-group">
                        {{ form_label(form.intitule,'Intitulé :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                        {{ form_errors(form.intitule) }}
                        {{ form_widget(form.intitule, { 'attr': {'class': 'form-control'} } )}}
                    </div>  
                    <div class="form-group">
                        {{ form_label(form.montant,'Montant :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                        {{ form_errors(form.montant) }}
                        {{ form_widget(form.montant, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.date,'Date :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                        {{ form_errors(form.date) }}
                        {{ form_widget(form.date, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    {%endif%}
                </div>
            </div>
        </div>
    </div>
    <div class="MenuBasCentre">
        <a href="{{path('fiche_visite',{'idVisite':visite.id})}}"><input type="button" value="Retour" class="btn btn-primary"></a>
            <button class="btn btn-primary" type="submit" id="document_Enregistrer" name="reglement[Enregistrer]">Enregistrer</button>
    </div>
            {{ form_row(form._token) }}
        {{ form_end(form, {'render_rest': false}) }} 
{%endblock%}