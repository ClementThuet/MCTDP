{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <h1 class="titresH1"> Ajouter une nouvelle photo pour la visite de {{visite.patient.nom}} {{visite.patient.prenom}} du {{visite.date|date('d-m-Y')}}</h1>
    {{ form_start(form) }}
        <div class='container-fluid formulaire'  >
            <div class='row'>
                <div class='col-md-12 '>
                    
                    <div class="form-group">
                        {{ form_label(form.observations) }}
                        {{ form_errors(form.observations) }}
                        {{ form_widget(form.observations, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.file) }}
                        {{ form_errors(form.file) }}
                        {{ form_widget(form.file, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                </div>
            </div>
        </div>
        <div id ='btRetour' >
            <a href="{{ path('fiche_visite',{'idVisite':visite.id})}}">
                <input type="button"  class="btn btn-primary" value="Retour">
            </a>
            <button class="btn btn-primary" type="submit" id="document_Enregistrer" name="document[Enregistrer]">Enregistrer</button>
        </div>
        {{ form_row(form._token) }}
        {{ form_end(form, {'render_rest': false}) }} 
   
        
{%endblock%}
