{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <div class='container-fluid'>
        <div class='row'>
            <div class='col-md-12'>
                <h2>Historique des prescriptions </h2>
               
                <table class="table table-striped table-light table-bordered table-hover tableCenter">
                        <thead class="thead-dark"> 
                            <tr>
                                <th>Id</th>
                                <th>Patient</th>
                                <th> Nom </th>
                                <th> Date de la visite</th>
                                <th>Observations</th>
                                <th>Voir</th>
                                <th>Modifier</th>
                                <th>Supprimer</th>
                            </tr>
                        </thead>
                        <tbody >
                            {% for prescription in listPrescriptions %}
                                <tr onclick="document.location = '{{ path('fiche_prescription',{'idPrescription':prescription.id})}}';">
                                    <td> {{prescription.id}} </td>
                                    <td> {{prescription.visite.patient.nom}} {{prescription.visite.patient.prenom}} </td>
                                    <td> {{prescription.nom}}</td>
                                    <td>{{prescription.date|date('d-m-Y')}} </td>
                                    <td>{{prescription.observations}}</td>
                                    <td><a href='{{ path('fiche_prescription',{'idPrescription':prescription.id})}}'> <i class="fas fa-eye" id="glyphEdit"></i></a></td>
                                    <td><a href='{{ path('editer_prescription',{'idPrescription':prescription.id})}}'> <i class="fas fa-edit" id="glyphEdit"></i></a></td>
                                    <td><a href='{{ path('supprimer_prescription',{'idPrescription':prescription.id})}}'> <i class=" fas fa-trash-alt" id="glyphSuppr"</a> </td>
                                </tr>
                            </a>
                            {%endfor%}
                        </tbody>
                    </table>
                    <div id ='btRetour' >
                        <a href="{{ path('menu_patients')}}">
                            <input type="button"  class="btn btn-primary" value="Retour">
                        </a>
                    </div>
{%endblock%}