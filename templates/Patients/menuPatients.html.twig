{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <div class='container-fluid'>
        <div class='row'>
            <div class='col-md-12'>
                <h1 class="titresH1">Liste des patients</h1>
                {%if rechercheEffectuee is defined %}
                    <div class='center'>
                        <button class="btn btn-primary" onclick="document.location = '{{path('menu_patients',{'page':1})}}';">Réinitialiser recherche</button>
                    </div>
                {%endif%}
                <div id='blockMainMenuPatients'>
                    <table class="table table-striped table-light  table-hover tableCenter">
                        <thead class="thead-dark"> 
                                <th>Nom<br>
                                    <input type="text" id="searchNom" placeholder="Chercher par nom"><br>
                                <a href="" id="btSearchNom"> <button class='btRecherche' >Rechercher</button></a></th>
                                <th>Prénom<br>
                                <input type="text" id="searchPrenom" placeholder="Chercher par prénom"><br>
                                <a href="" id="btSearchPrenom"> <button class='btRecherche' >Rechercher</button></a></th>
                                <th>Date de naissance<br>
                                <input type="text" id="searchDDN" placeholder="Année-mois-jour"><br>
                                <a href="" id="btSearchDDN"> <button class='btRecherche' >Rechercher</button></a></th>
                                <th>Ville<br>
                                <input type="text" id="searchVille" placeholder="Chercher par ville"><br>
                                <a href="" id="btSearchVille"> <button class='btRecherche' >Rechercher</button></a></th>
                                <th>N° téléphone<br>
                                <input type="text" id="searchTel" placeholder="Chercher par n° de téléphone"><br>
                                <a href="" id="btSearchTel"> <button class='btRecherche' >Rechercher</button></a></th>
                                <th>Visite</th>
                                <th>Modifier</th>
                                <th>Supprimer</th>
                        </thead>
                        <tbody >
                            {% for patient in listPatients %}
                                <tr class="parent pointerHover" onclick="document.location = '{{ path('fiche_patient',{'id': patient.id}) }}';" >
                                    <td  class="searchNom">{{patient.nom}} </td>
                                    <td class="searchPrenom">{{patient.prenom}} </td>
                                    <td>{{patient.dateNaiss|date('d-m-Y')}} </td>
                                    <td>{{patient.ville}} </td>
                                    <td>{{patient.telephone}}</td>
                                    <td><a href='{{ path('visite_patient',{'idPatient':patient.id}) }}'>  <i class="fas fa-user-circle glyphMenu" ></i></a></td>
                                    <td><a href='{{ path('editer_patient',{'id':patient.id}) }}'><i class="fas fa-edit glyphMenu" ></i></a>
                                    </td>
                                    <td><a href='{{ path('supprimer_patient',{'id':patient.id}) }}'>  <i class="fas fa-trash-alt glyphMenu"  ></i></a></td>
                                </tr>
                            </a>
                            {%endfor%}
                        </tbody>
                    </table>
                </div>
                {%if html is defined %}
                <div class='row'>
                    <div class='col-md-12 ' style="">
                        <div class="">{{html|raw}}</div>
                    </div>
                </div>
                {%endif%}
            </div>
        </div>
        <div class="MenuBasCentre">
            <a href="{{path('menu')}}"><input type="button" value="Retour" class="btn btn-primary"></a>
            <a href="{{ path('ajouter_patient')}}"><input type="button" class="btn btn-primary" value="Ajouter un patient"></a>
            <a href="{{ path('historique_visites',{'page':1})}}"><input type="button" class="btn btn-primary" value="Historique des visites"></a>
            <a href="{{ path('historique_prescriptions',{'page':1})}}"><input type="button" class="btn btn-primary" value="Historique des prescriptions"></a>
        </div>
    </div>
            


{%endblock%}
{% block javascripts %}
    {{parent()}}
    <script>
    //Recherche sur nom    
    $("#searchNom").on('keyup', function() { // everytime keyup event
        value=$('#searchNom').val();
        var pathToRedirect ='{{path('rechercher_patient',{'Entite':'Patient','champ':'nom','valeur':'Erreur'})}}';
        var finalPath=pathToRedirect.replace("Erreur", value);
        document.getElementById("btSearchNom").href=finalPath; 
    });
    
