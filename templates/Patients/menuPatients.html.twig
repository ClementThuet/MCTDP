{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <div class='container-fluid'>
        <div class='row'>
            <div class='col-md-12'>
                <div id='blockMainMenuPatients'>
                    <table class="table table-striped table-light table-bordered table-hover tableCenter">
                        <thead class="thead-dark"> 
                            <tr>
                                <th >Nom</th>
                                <th>Prénom</th>
                                <th>Date de naissance</th>
                                <th>Ville</th>
                                <th>N° téléphone</th>
                                <th>Modifier</th>
                                <th>Supprimer</th>
                            </tr>
                        </thead>
                        <tbody >
                            {% for patient in listPatients %}
                                <tr onclick="document.location = '{{ path('fiche_patient',{'id': patient.id}) }}';">
                                    <td> {{patient.nom}} </td>
                                    <td>{{patient.prenom}} </td>
                                    <td>{{patient.dateNaiss|date('Y-m-d')}} </td>
                                    <td>{{patient.ville}} </td>
                                    <td>{{patient.telephone}}</td>
                                    <td> <a href='{{ path('editer_patient',{'id':patient.id}) }}'><i class="fas fa-edit" id="glyphEdit"></i></a>
                                    </td>
                                    <td > <a href='{{ path('supprimer_patient',{'id':patient.id}) }}'>  <i class="fas fa-trash-alt" id="glyphSuppr" ></i></a></td>
                                </tr>
                            </a>
                            {%endfor%}
                        </tbody>
                    </table>
                        
                </div>
            </div>
        </div>
        <div class="row">
            <div class='col-md-2 offset-5'>
                <a href="{{ path('ajouter_patient')}}"><input type="button" class="btn btn-primary" value="Ajouter un patient"></a>
            </div>
        </div>
    </div>
            


{%endblock%}