{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <h1 class="titresH1"> Ajouter un nouveau document</h1>
    {{ form_start(form) }}
        <div class='container-fluid formulaire'  >
            <div class='row'>
                <div class='col-md-12 '>
                    <div class="form-group">
                        {{ form_label(form.intitule,'Intitul√© :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                        {{ form_errors(form.intitule) }}
                        {{ form_widget(form.intitule, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.date,'Date :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                        {{ form_errors(form.date) }}
                        {{ form_widget(form.date, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.observations,'Observations :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                        {{ form_errors(form.observations) }}
                        {{ form_widget(form.observations, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.file,'Document :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                        {{ form_errors(form.file) }}
                        {{ form_widget(form.file, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                </div>
            </div>
        </div>
        <div class="MenuBasCentre" >
            <a href="{{ path('documents_patient',{'idPatient':patient.id})}}">
                <input type="button"  class="btn btn-primary" value="Retour">
            </a>
            <button class="btn btn-primary" type="submit" id="document_Enregistrer" name="document[Enregistrer]">Enregistrer</button>
        </div>
        {{ form_row(form._token) }}
        {{ form_end(form, {'render_rest': false}) }} 
   
        
{%endblock%}
