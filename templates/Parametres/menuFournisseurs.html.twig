{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <h2>Liste des fournisseurs </h2>
    <div class='container-fluid'>
        <div class='row'>
            <div class='col-md-12'>
                <div id='blockMainMenuPatients'>
                    <table class="table table-striped table-light table-bordered table-hover tableCenter">
                        <thead class="thead-dark"> 
                            <tr>
                                <th>Nom</th>
                                <th>Téléphone</th>
                                <th>Mail</th>
                                <th>Site web</th>
                                <th>Adresse</th>
                                <th>Observations</th>
                                <th>Modifier</th>
                                <th>Supprimer</th>
                            </tr>
                        </thead>
                        <tbody >
                            {% for fournisseur in listFournisseurs %}
                                <tr onclick="document.location = '{{ path('fiche_fournisseur',{'idFournisseur': fournisseur.id}) }}';">
                                    <td> {{fournisseur.nom}} </td>
                                    <td>{{fournisseur.numTelephone}} </td>
                                    <td>{{fournisseur.mail}} </td>
                                    <td>{{fournisseur.siteWeb}} </td>
                                    <td>{{fournisseur.adresse}}</td>
                                    <td>{{fournisseur.observations}}</td>
                                    <td> <a href='{{ path('editer_fournisseur',{'idFournisseur':fournisseur.id}) }}'><i class="fas fa-edit" id="glyphEdit"></i></a></td>
                                    <td ><a href='{{ path('supprimer_fournisseur',{'idFournisseur':fournisseur.id}) }}'>  <i class="fas fa-trash-alt" id="glyphSuppr" ></i></a></td>
                                </tr>
                            </a>
                            {%endfor%}
                        </tbody>
                    </table>
                        
                </div>
            </div>
        </div>
        <div class="row">
            <div class='col-md-2 offset-5'>
                
            </div>
        </div>
        <div id ='btRetour' >
            <a href="{{ path('menu_parametres')}}"><input type="button"  class="btn btn-primary" value="Retour"></a>
            <a href="{{ path('ajouter_fournisseur')}}"><input type="button" class="btn btn-primary" value="Ajouter un fournisseur"></a>
        </div>
    </div>
            


{%endblock%}