{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <h1 class="titresH1"> Ajouter une nouvelle spécialité</h1>
    {{ form_start(form) }}
    <div class='container-fluid formulaire'  >
        <div class='row'>
            <div class='col-md-12 '>
                <div class="form-group">
                    {{ form_label(form.nom,'Nom :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.nom) }}
                    {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} } )}}
                </div>
                <div class="form-group">
                    {{ form_label(form.affichageVisitePatient,'Afficher ces spécialistes lors des visites :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.affichageVisitePatient) }}
                    {{ form_widget(form.affichageVisitePatient, { 'attr': {'class': 'form-control'} } )}}
                </div>
            </div>
        </div>
    </div>
    <div class="MenuBasCentre"> 
        <a href="{{ path('menu_specialites')}}"><input type="button"  class="btn btn-primary" value="Retour"></a>
        <button class="btn btn-primary" type="submit"  id="specialite_Enregistrer" name="specialite[Enregistrer]">Enregistrer</button>
    </div>
    {{ form_row(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}                      
        
{%endblock%}
