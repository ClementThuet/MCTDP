{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <h1 class="titresH1"> Ajouter un nouveau fournisseur</h1>
    {{ form_start(form) }}
    <div class='container-fluid formulaire'  >
        <div class='row'>
            <div class='col-md-12 '>
                <div class="form-group">
                    {{ form_label(form.nom,'Nom :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.nom) }}
                    {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} } )}}
                </div>
                <div class="form-group">
                    {{ form_label(form.numTelephone,'N° de téléphone :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.numTelephone) }}
                    {{ form_widget(form.numTelephone, { 'attr': {'class': 'form-control'} } )}}
                </div>
                <div class="form-group">
                    {{ form_label(form.mail,'Mail :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.mail) }}
                    {{ form_widget(form.mail, { 'attr': {'class': 'form-control'} } )}}
                </div>
                <div class="form-group">
                    {{ form_label(form.siteWeb,'Site web :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.siteWeb) }}
                    {{ form_widget(form.siteWeb, { 'attr': {'class': 'form-control'} } )}}
                </div>
                <div class="form-group">
                    {{ form_label(form.adresse,'Adresse :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.adresse) }}
                    {{ form_widget(form.adresse, { 'attr': {'class': 'form-control'} } )}}
                </div>
                <div class="form-group">
                    {{ form_label(form.observations,'Observations :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.observations) }}
                    {{ form_widget(form.observations, { 'attr': {'class': 'form-control'} } )}}
                </div>


            </div>
        </div>
    </div>
    <div class="MenuBasCentre">
        <a href="{{path('menu_fournisseurs')}}"><input type="button" class="btn btn-primary" value="Retour"></a>
        <button class="btn btn-primary" type="submit" id="patient_Enregistrer" name="fournisseur[Enregistrer]">Enregistrer</button>
    </div>
    {{ form_row(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}                      
        
{%endblock%}
