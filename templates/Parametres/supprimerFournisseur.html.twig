{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    
    <div class='container-fluid encartSuppr'>
        <div class='row'>
            <div class='col-md-8 offset-2'>
                <h1 class="titresH1">Supprimer un fournisseur </h1>
                <br>
                <p class="paragrapheExplicatif">
                    Êtes-vous certain de vouloir supprimer le médecin : "{{ fournisseur.nom }} " ?
                </p>
                <form action="{{ path('supprimer_fournisseur', {'idFournisseur': fournisseur.id}) }}" method="post">
                    <div class="MenuBasCentre">
                        <a href="{{ path('menu_fournisseurs') }}" >
                        <input type='button' class="btn btn-primary" value='Retour'></a>
                        <input type="submit" value="Supprimer" class="btn btn-danger" >
                    </div>
                  {{ form_rest(form) }}
                </form>
            </div>
        </div>
    </div>
{%endblock%}