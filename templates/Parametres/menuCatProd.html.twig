{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <h1 class="titresH1">Liste des catégories de produit </h1>
    <div class='container-fluid'>
        <div class='row'>
            <div class='col-md-12'>
                <div id='blockMainMenuPatients'>
                    <table class="table table-striped table-light table-hover tableCenter">
                        <thead class="thead-dark"> 
                            <tr>
                                <th>Nom</th>
                                <th>Modifier</th>
                                <th>Supprimer</th>
                            </tr>
                        </thead>
                        <tbody >
                        {% for categorie in listCatProds %}
                            <tr>
                                <td> {{categorie.nom}} </td>
                                <td> <a href='{{ path('editer_categorie_produit',{'idCatProd':categorie.id}) }}'><i class="fas fa-edit glyphMenu" ></i></a></td>
                                <td ><a href='{{ path('supprimer_categorie_produit',{'idCatProd':categorie.id}) }}'>  <i class="fas fa-trash-alt glyphMenu" ></i></a></td>
                            </tr>
                        {%endfor%}
                        </tbody>
                    </table>
                </div>
                <div class="MenuBasCentre" >
                    <a href="{{ path('menu_parametres')}}"><input type="button"  class="btn btn-primary" value="Retour"></a>
                    <a href="{{ path('ajouter_categorie_produit')}}"><input type="button" class="btn btn-primary" value="Ajouter une catégorie"></a>
                </div>
            </div>
        </div>
    </div>
{%endblock%}