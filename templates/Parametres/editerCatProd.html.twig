{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <h2 class="titresH1"> Modifier la cat√©gorie {{catProd.nom}} </h2>
    {{ form_start(form) }}
    <div class='container-fluid formulaire'  >
        <div class='row'>
