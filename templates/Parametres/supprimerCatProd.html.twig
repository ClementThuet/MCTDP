{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <div class='container-fluid encartSuppr'>
        <div class='row'>
            <div class='col-md-8 offset-2'>
                <h1 class='titresH1'>Supprimer une catégorie </h1>
                <br>
                <p class='paragrapheExplicatif'>
                    Êtes-vous certain de vouloir supprimer la catégorie : {{ catProd.nom }}  ?
                    Supprimer une catégorie supprime tout les produits qu'elle contient.
                    Si ce n'est pas votre souhait, modifier d'abord la catégorie des produits en question
                </p>
                <form action="{{ path('supprimer_categorie_produit', {'idCatProd': catProd.id}) }}" method="post">
                    <div class='MenuBasCentre'>
                        <a href="{{ path('menu_categories_produits') }}" >
                        <input type='button' class="btn btn-primary" value='Retour'></a>
                        <input type="submit" value="Supprimer" class="btn btn-danger" >
                    </div>
                {{ form_rest(form) }}
                </form>
            </div>
        </div>
    </div>
{%endblock%}