{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <h1 class="titresH1"> Ajouter un nouveau médecin</h1>
    {{ form_start(form) }}
    <div class='container-fluid formulaire'  >
        <div class='row'>
            <div class='col-md-12 '>
                <div class="form-group">
                    {{ form_label(form.nom,'Nom :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.nom) }}
                    {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} } )}}
                </div>
                <div class="form-group">
                    {{ form_label(form.prenom,'Prénom :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.prenom) }}
                    {{ form_widget(form.prenom, { 'attr': {'class': 'form-control'} } )}}
                </div>
                <div class="form-group">
                    {{ form_label(form.specialite,'Spécialité :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.specialite) }}
                    {{ form_widget(form.specialite, { 'attr': {'class': 'form-control'} } )}}
                </div>
                <div class="form-group">
                    {{ form_label(form.hopital,'Hopital :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.hopital) }}
                    {{ form_widget(form.hopital, { 'attr': {'class': 'form-control'} } )}}
                </div>
                <div class="form-group">
                    {{ form_label(form.adresse,'Adresse :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.adresse) }}
                    {{ form_widget(form.adresse, { 'attr': {'class': 'form-control'} } )}}
                </div>
                <div class="form-group">
                    {{ form_label(form.mail,'Mail :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.mail) }}
                    {{ form_widget(form.mail, { 'attr': {'class': 'form-control'} } )}}
                </div>
                <div class="form-group">
                    {{ form_label(form.observations,'Observations :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.observations) }}
                    {{ form_widget(form.observations, { 'attr': {'class': 'form-control'} } )}}
                </div>
            </div>
        </div>
    </div>
    <div class="MenuBasCentre"> 
        <a href="{{path('menu_medecins')}}"><input type="button" class="btn btn-primary" value="Retour"></a>
        <button class="btn btn-primary" type="submit" id="patient_Enregistrer" name="medecin[Enregistrer]">Enregistrer</button>
    </div>
    {{ form_row(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}                      
        
{%endblock%}
