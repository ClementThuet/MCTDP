{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <h2 class="titresH1"> Modifier une s√©ance Qi Gong  de {{seanceQG.patient.nom}} {{seanceQG.patient.prenom}}</h2>
    {{ form_start(form) }}
    <div class='container-fluid formulaire'  >
        <div class='row'>
            <div class='col-md-12 '>
                <div class="form-group">
                    {{ form_label(form.date,'Date :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.date) }}
                    {{ form_widget(form.date, { 'attr': {'class': 'form-control '} } )}}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 MenuBasCentre">
                <a href="{{ path('historique_presences_coupon_QiGong',{'idPatient': seanceQG.patient.id,'idCouponQG': seanceQG.couponQiGong.id,'page':1 })}}">
                <input type="button"  class="btn btn-primary" value="Retour"></a>
                <button class="btn btn-primary" type="submit" id="medecin_Enregistrer" name="medecin[Enregistrer]">Enregistrer</button>
            </div>
        </div>
    </div>
    {{ form_row(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}                      
{%endblock%}
