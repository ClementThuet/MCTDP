{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <h1 class="titresH1"> Ajouter un nouveau coupon Qi Gong</h1>
    {{form_start(form) }}
    {% for message in app.flashes('warning') %}
    <div class="warning">
        <p class="center paragrapheExplicatif"><b>{{ message }}</b></p>
    </div>
    {% endfor %}
    <div class='container-fluid formulaire'  >
        <div class='row'>
            <div class='col-md-12 '>
                <div class="form-group">
                    {{ form_label(form.patient,'Patient :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.patient) }}
                    {{ form_widget(form.patient, { 'attr': {'class': 'form-control'} } )}}
                </div>
                <div class="form-group">
                  {{ form_label(form.observations,'Observations :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                  {{ form_errors(form.observations) }}
                  {{ form_widget(form.observations, { 'attr': {'class': 'form-control'} } )}}
                </div>
                <div class="form-group">
                    {{ form_label(form.date,'Date :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.date) }}
                    {{ form_widget(form.date, { 'attr': {'class': 'form-control'} } )}}
                </div>
            </div>
        </div>
    </div>
    <div class="MenuBasCentre"> 
        <a href="{{ path('menu_QiGong',{'page':1})}}"><input type="button"  class="btn btn-primary" value="Retour"></a>
        <button class="btn btn-primary" type="submit" id="patient_Enregistrer" name="couponQiGong[Enregistrer]">Enregistrer</button>
    </div>
    {{ form_row(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}                      
        
{%endblock%}
