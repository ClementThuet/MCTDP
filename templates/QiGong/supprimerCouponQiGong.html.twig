{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    
    <div class='container-fluid'>
        <div class='row'>
            <div class='col-md-8 offset-2'>
                <h2>Supprimer un coupon</h2>
                <p>
                  Êtes-vous certain de vouloir supprimer le coupon de {{patient.nom }} {{patient.prenom}} 
                  {%if couponQiGong.observations%} ({{ couponQiGong.observations }}) {%endif%} ?
                </p>
                    
                <form action="{{ path('supprimer_couponQiGong', {'idCQG': couponQiGong.id}) }}" method="post">
                    <a href="{{ path('menu_QiGong') }}" >
                       <input type='button' class="btn btn-primary" value='Retour au menu '></input> 
                    </a>
                    <input type="submit" value="Supprimer" class="btn btn-danger" />
                  
                  {# Ceci va générer le champ CSRF #}
                  {{ form_rest(form) }}
                </form>
            </div>
        </div>
    </div>
{%endblock%}