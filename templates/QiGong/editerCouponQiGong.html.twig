{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <h1 class="titresH1  "> Modifier un coupon</h1>
    {{ form_start(form) }}
    <div class='container-fluid formulaire'  >
        <div class='row'>
            <div class='col-md-12 '>
                <div class="form-group">
                  {{ form_label(form.observations ,'Observations :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                  {{ form_errors(form.observations) }}
                  {{ form_widget(form.observations, { 'attr': {'class': 'form-control labelFormTxt'} } )}}
                </div>
            </div>
        </div>
        <div class="MenuBasCentre" >
           <a href="{{ path('menu_QiGong',{'page':1})}}">
           <input type="button"  class="btn btn-primary" value="Retour"></a>
           <button class="btn btn-primary" type="submit" id="patient_Enregistrer" name="patient[Enregistrer]">Enregistrer</button>
        </div>
    </div>
    {{ form_row(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}                      
        
{%endblock%}
