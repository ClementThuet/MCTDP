{% extends  'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    
    
    <div class='container-fluid'>
        <div class='row'>
            <div class='col-md-12'>
                <div id='blockMainMenuPatients'>
                    <h2>Coupons Qi Gong en cours </h2>
                    <table class="table table-striped table-light table-bordered table-hover tableCenter">
                        <thead class="thead-dark"> 
                            <tr>
                                 <th> Nom<br>
                                 <input type="text" class="recherche" id="searchNom" placeholder="Chercher par nom"></th>
                                <th>Prénom<br>
                                <input type="text" class="recherche" id="searchPrenom" placeholder="Chercher par prénom"></th>
                                <th>Nombre de séance</th>
                                <th>Observations</th>
                                <th>Modifier</th>
                                <th>Supprimer</th>
                            </tr>
                        </thead>
                        <tbody >
                            {% for couponQG in listCouponsQiGong %}
                                <tr class="parent">
                                  <td  class="searchNom">{{couponQG.patient.nom}} </td>
                                    <td class="searchPrenom">{{couponQG.patient.prenom}} </td>
                                    <td>{{couponQG.nbSeanceEffectuee}} </td>
                                    <td>{{couponQG.observations}} </td>
                                    <td> <a href='{{ path('editer_couponQiGong',{'idCQG':couponQG.id}) }}'><i class="fas fa-edit" id="glyphEdit"></i></a></td>
                                    <td > <a href='{{ path('supprimer_couponQiGong',{'idCQG':couponQG.id}) }}'>  <i class="fas fa-trash-alt" id="glyphSuppr" ></i></a></td>
                                </tr>
                            </a>
                            {%endfor%}
                        </tbody>
                    </table>
                        
                </div>
            </div>
        </div>
        <div class="row">
            <div class='col-md-2 offset-5'>
                
            </div>
        </div>
        <div id ='btRetour' >
            <a href="{{ path('menu')}}"><input type="button"  class="btn btn-primary" value="Retour"></a>
            <a href="{{ path('ajouter_couponQiGong')}}"><input type="button" class="btn btn-primary" value="Nouvel inscrit Qi Gong"></a>
        </div>
    </div>
 
{%endblock%}

