{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <div class='container-fluid'>
        <div class='row'>
            <div class='col-md-12'>
                <h2>Historique des séances de Qi Gong de  {{ patient.nom}} {{ patient.prenom}}</h2>
               
                <table class="table table-striped table-light table-bordered table-hover tableCenter">
                        <thead class="thead-dark"> 
                            <tr>
                                <th>Numéro</th>
                                <th> Date de la visite</th>
                                <th>Modifier</th>
                                <th>Supprimer</th>
                            </tr>
                        </thead>
                        <tbody >
                            {% for key,seanceQG in listSeancesPatient %}
                                <tr onclick="document.location = '{{ path('fiche_visite', { 'idVisite':patient.id }) }}'">
                                    <td> {{key+1}} </td>
                                    <td>{{seanceQG.date|date('d-m-Y')}} </td>
                                    <td><a href='{{ path('editer_visite',{'idVisite':seanceQG.id}) }}'> <i class="fas fa-edit" id="glyphEdit"></i></a></td>
                                    <td><a href='{{ path('supprimer_visite',{'idVisite':seanceQG.id}) }}'> <i class=" fas fa-trash-alt" id="glyphSuppr"</a> </td>
                                </tr>
                            </a>
                            {%endfor%}
                        </tbody>
                    </table>
                    <div id ='btRetour' >
                        <a href="{{ path('menu_QiGong')}}">
                            <input type="button"  class="btn btn-primary" value="Retour">
                        </a>
                    </div>
{%endblock%}